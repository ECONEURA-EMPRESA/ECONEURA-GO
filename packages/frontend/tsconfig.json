{
  "extends": "@econeura/config/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@shared/*": [
        "../../packages/shared/*"
      ]
    },
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom",
      "node",
      "vite/client"
    ]
  },
  "include": [
    "src",
    "tests",
    "vite.config.ts"
  ]
}