{
  "name": "@econeura/backend",
  "version": "1.0.0",
  "description": "ECONEURA Backend - DDD + CQRS + Hexagonal",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json --skipLibCheck",
    "start": "node dist/index.js",
    "type-check": "tsc -p tsconfig.json --noEmit --skipLibCheck",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:integration": "cross-env GEMINI_API_KEY=test-key DATABASE_URL=postgres://mock:5432/mock USE_MEMORY_STORE=true jest tests/integration",
    "lint": "eslint .",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:init:test": "tsx scripts/init-test-db.ts"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "@azure/storage-blob": "^12.29.1",
    "@econeura/shared": "*",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@types/express-rate-limit": "^6.0.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "applicationinsights": "^3.12.0",
    "axios": "^1.7.7",
    "cookie-parser": "^1.4.7",
    "cross-env": "^10.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "ioredis": "^5.8.2",
    "jest": "^30.2.0",
    "openai": "^6.9.1",
    "pg": "^8.16.3",
    "rate-limit-redis": "^4.3.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/dotenv": "^8.2.3",
    "@types/helmet": "^0.0.48",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/winston": "^2.4.4",
    "dotenv": "^17.2.3"
  }
