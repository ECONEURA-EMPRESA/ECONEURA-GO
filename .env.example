# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=econeura_db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Azure credentials / infrastructure connection

# === FRONTEND ENVIRONMENT VARIABLES ===
# API URL for backend connection
# Local development: http://localhost:3000/api
# Production: https://econeura-backend-production.azurewebsites.net/api
VITE_API_URL=http://localhost:3000/api

# Optional: NEURA Gateway URL (if using separate gateway)
# VITE_NEURA_GW_URL=https://your-gateway-url.com  

# Optional: Gateway Authentication Key
# VITE_NEURA_GW_KEY=your-gateway-key

# Optional: Azure Log Analytics (for telemetry)
# VITE_LA_WORKSPACE_ID=your-workspace-id
# VITE_LA_SHARED_KEY=your-shared-key

# === BACKEND ENVIRONMENT VARIABLES ===
# (These are already documented above, kept for reference)
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account
AZURE_STORAGE_CONNECTION_STRING=your_connection_string

# Application Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# Security
JWT_SECRET=your_jwt_secret_minimum_32_characters
SESSION_SECRET=your_session_secret_minimum_32_characters

# Monitoring (optional for local dev)
APPLICATIONINSIGHTS_CONNECTION_STRING=
